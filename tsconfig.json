{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2017",
    "jsx": "react",
    "strict": false,
    "allowSyntheticDefaultImports":true,
    // "strictFunctionTypes": false,
    "strictNullChecks": false,
    //"stripInternal": false,
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "./",  // all paths are relative to the baseUrl
    "paths": {
        "@/*" : ["src/*"]   // resolve any `~/foo/bar` to `<baseUrl>/foo/bar`
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/base/@types",
      "./src/basic/@types",
      "global.d.ts" 
    ],
    
  },
  "exclude": [
    "./node_modules"
  ],
  "include": [
    "./config/**/*",
    "./src/**/*",
    "global.d.ts" 
  ],
  "ignoreRules": {
    "TS2307": true
  }
}